pipeline {
    agent any
    parameters{
        string(name: 'TARGET_ENV', defaultValue: 'PROD', description: 'Environment')
    }
  
    stages {
        stage('Start') {
            steps {
                echo 'Hello World'
                sleep 5
            }
        }
        stage('Build') {
            steps {
                script{
                    def smokeJob = build job: 'IntegrationTestSmoke', propagate: false
                        parameters: [
                             [$class: 'StringParameterValue', name: 'FROM_BUILD', value: "${BUILD_NUMBER}" ],
                             [$class: 'BooleanParameterValue', name: 'IS_READY', value: true]
                        ]
                        
                        if(smokeJob.result != "SUCCESS"){
                            echo "Smoke test status: ${smokeJob.result}"
                            currentBuild.result = 'ABORTED' 
                        }
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
        stage('Release') {
            steps {
                echo 'Releasing'
            }
        }
    }
}
